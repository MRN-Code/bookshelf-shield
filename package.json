{
  "name": "bookshelf-shield",
  "version": "2.1.0",
  "description": "Access control list based authorization for bookshelf models",
  "main": "dist/main.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "babel": "5.1.10",
    "create-error": "0.3.1",
    "joi": "6.2.0",
    "lodash": "3.6.0",
    "precommit-hook": "^3.0.0",
    "thenify-all": "1.6.0"
  },
  "devDependencies": {
    "bookshelf": "0.7.9",
    "chai": "2.2.0",
    "chai-as-promised": "5.0.0",
    "grunt": "0.4.5",
    "grunt-contrib-jshint": "0.11.0",
    "grunt-jscs": "1.5.0",
    "grunt-mocha-cli": "1.12.0",
    "knex": "0.7.6",
    "load-grunt-config": "0.16.0",
    "load-grunt-tasks": "3.1.0",
    "mock-knex": "0.1.2",
    "relations": "0.5.0",
    "time-grunt": "1.0.0"
  },
  "scripts": {
    "test": "grunt test",
    "lint": "jshint lib/. test/.",
    "validate": "npm ls",
    "build": "babel --out-dir=dist lib && git add dist/*",
    "preversion": "git checkout master && git pull && npm ls",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dylancwood/bookshelf-shield.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dylancwood/bookshelf-shield/issues"
  },
  "homepage": "https://github.com/dylancwood/bookshelf-shield",
  "pre-commit": [
    "lint",
    "validate",
    "test",
    "build"
  ]
}
